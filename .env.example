# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/langgraph_agents
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/langgraph_agents

# Redis
REDIS_URL=redis://localhost:6379/0

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Proxy settings (optional - for corporate proxy environments)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# PROXY_CA_BUNDLE=/path/to/ca-bundle.crt
# PROXY_CLIENT_CERT=/path/to/client-cert.pem
# PROXY_USE_FORWARDING_FOR_HTTPS=true

# Authentication
ACCESS_KEY_SECRET=your-secret-key-for-signing-access-tokens

# Models
DEFAULT_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
SUB_AGENT_MODEL_ID=anthropic.claude-3-5-haiku-20241022-v1:0

# Context limits
CONTEXT_MAX_TOKENS=200000
CONTEXT_WARNING_THRESHOLD=80
CONTEXT_LOCK_THRESHOLD=95

# Timeouts
PARALLEL_TIMEOUT_SECONDS=30
SUB_AGENT_TIMEOUT_SECONDS=60
TOOL_TIMEOUT_SECONDS=30
SESSION_TIMEOUT_SECONDS=300

# Retry settings
DEFAULT_MAX_RETRIES=3
RETRY_BACKOFF_SECONDS=1.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API
API_PREFIX=/api/v1
CORS_ORIGINS=["*"]

# Features
ENABLE_METRICS=true
ENABLE_REQUEST_LOGGING=true
